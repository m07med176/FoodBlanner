<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_login_chooser"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/constrain_layout_login_corners"
        tools:context=".ui.features.login.LoginActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/emailTxtView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.669"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/login_animation" />

        <EditText
            android:id="@+id/passwordTxtView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/enterPassword"
            android:inputType="textPassword"

            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="#999EA1"
            app:layout_constraintEnd_toEndOf="@+id/emailTxtView"
            app:layout_constraintStart_toStartOf="@+id/emailTxtView"
            app:layout_constraintTop_toBottomOf="@+id/emailTxtView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:backgroundTint="@drawable/button_state_color"
            android:text="@string/login"
            android:textColor="@color/white"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="@+id/passwordTxtView"
            app:layout_constraintStart_toStartOf="@+id/passwordTxtView"
            app:layout_constraintTop_toBottomOf="@+id/passwordTxtView" />


        <EditText
            android:id="@+id/emailTxtView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="308dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:hint="@string/enterYourMail"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="#999EA1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:text="New to food planner ?"
            android:textColor="#999EA1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/loginBtn" />

        <TextView
            android:id="@+id/createNewAccountTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createNewAccount"
            android:textColor="@color/purbleButtonsEnabled"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/purbleButtonsEnabled"
            app:layout_constraintBottom_toTopOf="@+id/emailTxtView"
            app:layout_constraintStart_toStartOf="@+id/emailTxtView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/purbleButtonsEnabled"

            app:layout_constraintBottom_toTopOf="@+id/passwordTxtView"
            app:layout_constraintStart_toStartOf="@+id/passwordTxtView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
