<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.features.category.CategoryFragment" >


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:hintAnimationEnabled="false"
        android:backgroundTint="@color/white"

        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/searchBarTxtView"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:autofillHints=""
            android:background="@drawable/input_style"
            android:completionHint="@string/autocomplete_result_show"
            android:completionThreshold="1"
            android:gravity="center_horizontal|center_vertical"
            android:hint="@string/searchHere"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="OnClick" />
    </com.google.android.material.textfield.TextInputLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/row_category_search"
        android:id="@+id/recyclerView"
        android:layout_width="408dp"
        android:layout_height="639dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" />

</LinearLayout>